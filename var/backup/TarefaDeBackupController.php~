<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;

class TarefaDeBackupController extends Controller
{
    
    public function create()
    {
        return view('formTarefaBackup');
    }

    public function store(Request $request)
    {
        $dadosValidados = $request->validate([
            'origem' => 'required|max:255',
            'destino' => 'required|max:255',
            'cron' => 'required',
        ]);

        $show = TarefaDeBackup::create($dadosValidados);
        
        return redirect('/')->with('success', 'TarefaDeBackup Salva com Sucesso');
    }
}
